<div class="flex justify-between items-center p-3 text-white rounded-lg">
  <img src="/logo.png" alt="Logo" class="h-10" />

  <div class="flex items-center gap-3">
    <div class="flex border border-white rounded-lg overflow-hidden">
      {
        options.map((option) => (
          <div
            class={`px-4 py-2 cursor-pointer transition ${
